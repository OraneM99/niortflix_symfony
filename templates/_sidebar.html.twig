                <li><a href="#">Séries populaires</a></li>
                <li><a href="#">Actualités</a></li>
            </ul>
        </div>

        <!-- Bloc Découvrir -->
        <div class="sidebar-item">
            <button type="button" class="sidebar-link has-submenu">
                <img src="{{ asset('icons/idea.png') }}" width="18"> Découvrir <span class="arrow">▶</span>
            </button>
            <ul class="submenu">
