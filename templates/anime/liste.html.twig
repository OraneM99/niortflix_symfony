{% extends 'base.html.twig' %}

{% set search = search|default('') %}
{% set sort = sort|default('') %}

{% block title %}Liste des animes{% endblock %}

{% block body %}
    <div class="container my-5 text-black">

        <!-- Titre -->
        <h2 class="text-center mb-4">üé¨ Liste des animes</h2>
        <form method="get" class="mb-4 d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <label for="search" class="me-2 mb-0">Rechercher</label>
                <input type="text" name="search" id="search" class="form-control me-2"
                       value="{{ search|default('') }}" placeholder="Nom de l'anime...">
                <button type="submit" class="btn btn-outline-primary">üîç</button>
            </div>
        </form>

        <!-- Filtres de tri -->
        <form method="get" class="mb-4 d-flex justify-content-end align-items-center">
            <label for="sort" class="me-2">Trier par :</label>
            <select name="sort" id="sort" class="form-select w-auto" onchange="this.form.submit()">
                <option value="">-- Choisir --</option>
                <option value="name" {{ sort == 'name' ? 'selected' }}>Nom</option>
                <option value="firstAirDate" {{ sort == 'firstAirDate' ? 'selected' }}>Premi√®re diffusion</option>
                <option value="lastAirDate" {{ sort == 'lastAirDate' ? 'selected' }}>Derni√®re diffusion</option>
                <option value="popularity" {{ sort == 'popularity' ? 'selected' }}>Popularit√©</option>
                <option value="vote" {{ sort == 'vote' ? 'selected' }}>Note</option>
            </select>
        </form>

        <!-- Liste des animes -->
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            {% for anime in animes %}
                <div class="col">
                    <div class="card h-100 bg-dark text-light border-secondary shadow-sm">
                        <a href="{{ path('anime_detail', {id : anime.id}) }}" class="text-decoration-none text-light">
                            <img src="{{ asset(anime_params.poster_dir ~ '/' ~ anime.poster)}}" class="card-img-top" alt="Poster de {{ anime.name }}" loading="lazy" style="height: 370px; object-fit: cover; border-bottom: 1px solid #444;">
                            <div class="card-body text-center">
                                <h5 class="card-title">{{ anime.name }}</h5>
                            </div>
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-warning bg-transparent border-warning text-center text-warning">
                        ‚ö†Ô∏è Pas d'anime trouv√©.
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Pagination -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            {% if page > 1 %}
                <a class="btn btn-primary btn-outline-light" href="{{ path('anime_liste', {'page': page - 1}) ~ '?sort=' ~ sort ~ '&search=' ~ search}}">‚Üê Page pr√©c√©dente</a>
            {% else %}
                <div></div>
            {% endif %}

            {% if page < nb_pages %}
                <a class="btn btn-primary btn-outline-light ms-auto" href="{{ path('anime_liste', {'page': page + 1}) ~ '?sort=' ~ sort ~ '&search=' ~ search }}">Page suivante ‚Üí</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
