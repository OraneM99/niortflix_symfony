{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
    <div class="min-vh-100 d-flex align-items-center justify-content-center position-relative py-4"
         style="background: url('{{ asset('images/fond-serie.jpeg') }}') center/cover no-repeat fixed; background-size: cover;">

        <div class="container position-relative">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <!-- Carte principale -->
                    <div class="card bg-dark text-light border-0 shadow-lg auth-card">
                        <div class="card-body p-4 p-md-5">
                            <!-- En-tête avec icône -->
                            <div class="text-center mb-4">
                                <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3 auth-icon">
                                    <img src="{{ asset('icons/user.png') }}" alt="Utilisateur">
                                </div>
                                <h1 class="h3 fw-bold text-white mb-2">Créer un compte</h1>
                                <p class="text-light opacity-75 mb-0">Rejoignez SeriesTime en quelques minutes</p>
                            </div>

                            {# Messages flash d'erreur #}
                            {% for flash_error in app.flashes('verify_email_error') %}
                                <div class="alert alert-danger d-flex align-items-start border-0 mb-4 custom-alert">
                                    <img src="{{ asset('icons/cadenas.png') }}" class="me-2">
                                    <small>{{ flash_error }}</small>
                                </div>
                            {% endfor %}

                            {# Messages flash de succès #}
                            {% for flash_success in app.flashes('success') %}
                                <div class="alert alert-success d-flex align-items-start border-0 mb-4 custom-alert">
                                    <img src="{{ asset('icons/user.png') }}" class="me-2">
                                    <small>{{ flash_success }}</small>
                                </div>
                            {% endfor %}

                            {{ form_start(registrationForm) }}

                            <!-- Champ Nom d'utilisateur -->
                            <div class="mb-3">
                                {{ form_label(registrationForm.username, null, { 'label_attr': {'class': 'form-label text-light small fw-medium'} }) }}
                                <div class="input-icon">
                                    <img src="{{ asset('icons/user.png') }}" class="input-icon-left" alt="Nom d'utilisateur">
                                    {{ form_widget(registrationForm.username, { 'attr': { 'class': 'form-control custom-form-control ps-5', 'placeholder': 'Votre nom d\'utilisateur' } }) }}
                                </div>
                                {% if form_errors(registrationForm.username) %}
                                    <div class="text-danger mt-2">
                                        <small><img src="{{ asset('icons/cadenas.png') }}" class="me-1">{{ form_errors(registrationForm.username) }}</small>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Champ Email -->
                            <div class="mb-3">
                                {{ form_label(registrationForm.email, null, { 'label_attr': {'class': 'form-label text-light small fw-medium'} }) }}
                                <div class="input-icon">
                                    <img src="{{ asset('icons/enveloppe.png') }}" class="input-icon-left" alt="Email">
                                    {{ form_widget(registrationForm.email, { 'attr': { 'class': 'form-control custom-form-control ps-5', 'placeholder': 'votre@email.com' } }) }}
                                </div>
                                {% if form_errors(registrationForm.email) %}
                                    <div class="text-danger mt-2">
                                        <small><img src="{{ asset('icons/cadenas.png') }}" class="me-1">{{ form_errors(registrationForm.email) }}</small>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Champ Mot de passe -->
                            <div class="mb-3">
                                {{ form_label(registrationForm.plainPassword.first, 'Mot de passe', { 'label_attr': {'class': 'form-label text-light small fw-medium'} }) }}
                                <div class="input-icon">
                                    <img src="{{ asset('icons/cadenas.png') }}" class="input-icon-left" alt="Mot de passe">
                                    {{ form_widget(registrationForm.plainPassword.first, { 'attr': { 'class': 'form-control custom-form-control ps-5', 'placeholder': '••••••••••' } }) }}
                                </div>
                                {% if form_errors(registrationForm.plainPassword.first) %}
                                    <div class="text-danger mt-2">
                                        <small><img src="{{ asset('icons/cadenas.png') }}" class="me-1">{{ form_errors(registrationForm.plainPassword.first) }}</small>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Champ Confirmation mot de passe -->
                            <div class="mb-3">
                                {{ form_label(registrationForm.plainPassword.second, 'Confirmer le mot de passe', { 'label_attr': {'class': 'form-label text-light small fw-medium'} }) }}
                                <div class="input-icon">
                                    <img src="{{ asset('icons/cadenas.png') }}" class="input-icon-left" alt="Confirmation mot de passe">
                                    {{ form_widget(registrationForm.plainPassword.second, { 'attr': { 'class': 'form-control custom-form-control ps-5', 'placeholder': '••••••••••' } }) }}
                                </div>
                                {% if form_errors(registrationForm.plainPassword.second) %}
                                    <div class="text-danger mt-2">
                                        <small><img src="{{ asset('icons/cadenas.png') }}" class="me-1">{{ form_errors(registrationForm.plainPassword.second) }}</small>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Case à cocher Conditions -->
                            <div class="mb-4 p-3 custom-terms-box">
                                <div class="form-check">
                                    {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'form-check-input custom-form-check' } }) }}
                                    {{ form_label(registrationForm.agreeTerms, null, { 'label_attr': {'class': 'form-check-label text-light small'} }) }}
                                </div>
                                {% if form_errors(registrationForm.agreeTerms) %}
                                    <div class="text-danger mt-2">
                                        <small><img src="{{ asset('icons/cadenas.png') }}" class="me-1">{{ form_errors(registrationForm.agreeTerms) }}</small>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Bouton d'inscription -->
                            <button type="submit" class="btn btn-primary btn-lg w-100 fw-semibold mb-4 custom-btn d-flex align-items-center justify-content-center">
                                <img src="{{ asset('icons/user.png') }}" class="me-2" alt="Créer un compte">
                                Créer mon compte
                                <img src="{{ asset('icons/arrow.png') }}" class="ms-2" alt="">
                            </button>

                            {{ form_end(registrationForm) }}

                            <!-- Lien de connexion -->
                            <div class="text-center mb-3">
                                <small class="text-light opacity-75">
                                    Déjà un compte ?
                                    <a href="{{ path('app_login') }}" style="color:#7F8CAA; text-decoration:none; font-weight:500;">
                                        Se connecter
                                    </a>
                                </small>
                            </div>

                            <!-- Indicateur sécurité -->
                            <div class="d-flex align-items-center justify-content-center security-info">
                                <img src="{{ asset('icons/shield.png') }}" alt="Sécurité" class="me-2" style="width:1rem;height:1rem;">
                                <small class="text-white">Vos données sont sécurisées et chiffrées</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <style>
            body {
                margin: 0;
                padding: 0;
                min-height: 100vh;
                background: url('{{ asset('images/fond-serie.jpeg') }}') center/cover no-repeat fixed;
                background-size: cover;
                font-family: Arial, sans-serif;
            }

            .auth-card {
                background-color: rgba(0,0,0,0.8);
                backdrop-filter: blur(10px);
                border-radius: 15px;
                z-index: 2;
                animation: slideUp 0.6s ease-out;
            }

            .auth-icon {
                width: 4rem; height: 4rem;
                display: flex; align-items: center; justify-content: center;
                background-color: rgb(51, 52, 70);
                border: 2px solid #7F8CAA;
            }
            .auth-icon img {
                width: 2rem; height: 2rem;
            }

            .input-icon { position: relative; }
            .input-icon-left {
                position: absolute;
                left: 15px;
                top: 50%;
                transform: translateY(-50%);
                pointer-events: none;
                width: 1.2rem; height: 1.2rem;
            }

            .custom-form-control {
                background-color: rgba(255,255,255,0.1) !important;
                border: 1px solid rgba(255,255,255,0.3) !important;
                color: white !important;
                border-radius: 8px !important;
            }
            .custom-form-control::placeholder { color: rgba(255,255,255,0.6) !important; }
            .custom-form-control:focus {
                background-color: rgba(255,255,255,0.15) !important;
                border-color: #333446 !important;
                box-shadow: 0 0 0 0.2rem rgb(127, 140, 170) !important;
                color: white !important;
            }

            .custom-form-check {
                background-color: rgba(255,255,255,0.1);
                border:1px solid rgba(255,255,255,0.3);
            }
            .custom-form-check:checked {
                background-color:#7F8CAA;
                border-color:#7F8CAA;
            }

            .custom-btn {
                background-color: #7F8CAA !important;
                border-color: #7F8CAA !important;
                border-radius: 8px;
                transition: all 0.3s ease;
            }
            .custom-btn:hover {
                background-color: #333446 !important;
                border-color: #333446 !important;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgb(127, 140, 170);
            }
            .custom-btn img { width: 1rem; height: 1rem; }

            .container.position-relative { position: relative; z-index:2; }

            .custom-alert {
                background-color: rgba(0,0,0,0.6);
                backdrop-filter: blur(5px);
                border-radius: 8px;
            }
            .alert-danger { border-left: 4px solid #dc3545; }
            .alert-success { border-left: 4px solid #198754; }

            .security-info {
                padding: 0.5rem;
                background-color: rgba(255,255,255,0.05);
                border-radius: 6px;
                border:1px solid rgba(255,255,255,0.1);
            }
            .security-info small { color:white !important; }

            @keyframes slideUp { from { opacity:0; transform: translateY(30px); } to { opacity:1; transform: translateY(0); } }

            @media (max-width:768px) {
                .auth-card { margin:1rem; }
                .card-body { padding: 2rem 1.5rem !important; }
            }
        </style>
    </div>
{% endblock %}
