{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <div class="min-vh-100 d-flex align-items-center justify-content-center position-relative"
         style="background: url('{{ random_background() ?: asset('images/fond.jpeg') }}') center/cover no-repeat fixed;">

        <!-- Overlay sombre -->
        <div class="overlay position-absolute top-0 start-0 w-100 h-100"></div>

        <div class="container position-relative">
            <div class="row justify-content-center">
                <div class="col-md-5 col-lg-4">
                    <!-- Carte principale -->
                    <div class="card bg-dark text-light border-0 shadow-lg auth-card">
                        <div class="card-body p-4 p-md-5">
                            <!-- En-t√™te avec ic√¥ne -->
                            <div class="text-center mb-4">
                                <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3 auth-icon">
                                    <i class="fas fa-user text-white fs-4"></i>
                                </div>
                                <h1 class="h3 fw-bold text-white mb-2">üì∫ Connexion</h1>
                                <p class="text-light opacity-75 mb-0">Acc√©dez √† votre espace SeriesTime</p>
                            </div>

                            {# Messages d'erreur de login #}
                            {% if error %}
                                <div class="alert alert-danger d-flex align-items-center border-0 mb-4 custom-alert">
                                    <i class="fas fa-exclamation-triangle text-danger me-3"></i>
                                    <small>{{ error.messageKey|trans(error.messageData, 'security') }}</small>
                                </div>
                            {% endif %}

                            {# Message si l'utilisateur est d√©j√† connect√© #}
                            {% if app.user %}
                                <div class="alert alert-success d-flex align-items-center border-0 mb-4 custom-alert">
                                    <i class="fas fa-check-circle text-success me-3"></i>
                                    <div>
                                        <small>Connect√© en tant que <strong>{{ app.user.username }}</strong>.</small>
                                        <a href="{{ path('app_logout') }}" class="text-success text-decoration-none ms-2">
                                            <small>Se d√©connecter</small>
                                        </a>
                                    </div>
                                </div>
                            {% endif %}

                            <form method="post">
                                <!-- Champ Email -->
                                <div class="mb-3">
                                    <label for="inputEmail" class="form-label text-light small fw-medium">
                                        <i class="fas fa-envelope me-2"></i>Adresse email
                                    </label>
                                    <input type="email"
                                           value="{{ last_username }}"
                                           name="email"
                                           id="inputEmail"
                                           class="form-control custom-form-control"
                                           placeholder="votre@email.com"
                                           autocomplete="email"
                                           required
                                           autofocus>
                                </div>

                                <!-- Champ Mot de passe -->
                                <div class="mb-3">
                                    <label for="inputPassword" class="form-label text-light small fw-medium">
                                        <i class="fas fa-lock me-2"></i>Mot de passe
                                    </label>
                                    <input type="password"
                                           name="password"
                                           id="inputPassword"
                                           class="form-control custom-form-control"
                                           placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                                           autocomplete="current-password"
                                           required>
                                </div>

                                <!-- Options -->
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div class="form-check">
                                        <input type="checkbox"
                                               id="remember_me"
                                               name="_remember_me"
                                               class="form-check-input custom-form-check">
                                        <label for="remember_me" class="form-check-label text-light small">
                                            Se souvenir de moi
                                        </label>
                                    </div>
                                    <a href="#" class="text-decoration-none small text-primary">
                                        Mot de passe oubli√© ?
                                    </a>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <!-- Bouton de connexion -->
                                <button type="submit" class="btn btn-primary btn-lg w-100 fw-semibold mb-4 custom-btn">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    Se connecter
                                    <i class="fas fa-arrow-right ms-2"></i>
                                </button>
                            </form>

                            <!-- Lien d'inscription -->
                            <div class="text-center">
                                <small class="text-light opacity-75">
                                    Pas encore de compte ?
                                    <a href="{{ path('app_register') }}" class="text-decoration-none text-primary fw-medium">
                                        Cr√©er un compte
                                    </a>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Styles personnalis√©s -->
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
        }

        .min-vh-100 {
            min-height: 100vh;
            position: relative;
            z-index: 1;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.4);
            z-index: 1;
        }

        .container.position-relative {
            position: relative;
            z-index: 2;
        }

        .auth-card {
            backdrop-filter: blur(10px);
            border-radius: 15px !important;
            z-index: 2;
        }

        .auth-icon {
            width: 4rem;
            height: 4rem;
            background-color: rgba(13, 110, 253, 0.2);
            border: 2px solid #0d6efd;
        }

        .custom-form-control {
            background-color: rgba(255, 255, 255, 0.1) !important;
            border: 1px solid rgba(255, 255, 255, 0.3) !important;
            color: white !important;
            border-radius: 8px !important;
        }

        .custom-form-control:focus {
            background-color: rgba(255, 255, 255, 0.15) !important;
            border-color: #0d6efd !important;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25) !important;
            color: white !important;
        }

        .custom-form-control::placeholder {
            color: rgba(255, 255, 255, 0.6) !important;
        }

        .custom-form-check {
            background-color: rgba(255, 255, 255, 0.1) !important;
            border: 1px solid rgba(255, 255, 255, 0.3) !important;
        }

        .custom-form-check:checked {
            background-color: #0d6efd !important;
            border-color: #0d6efd !important;
        }

        .custom-btn {
            background-color: #0d6efd !important;
            border-color: #0d6efd !important;
            border-radius: 8px !important;
            transition: all 0.3s ease !important;
        }

        .custom-btn:hover {
            background-color: #0b5ed7 !important;
            border-color: #0a58ca !important;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3) !important;
        }

        .custom-btn:hover .fa-arrow-right {
            transform: translateX(3px);
            transition: transform 0.2s ease;
        }

        .custom-alert {
            background-color: rgba(0, 0, 0, 0.6) !important;
            backdrop-filter: blur(5px);
            border-radius: 8px;
        }

        .alert-danger {
            border-left: 4px solid #dc3545 !important;
        }

        .alert-success {
            border-left: 4px solid #198754 !important;
        }

        .auth-card {
            animation: slideUp 0.6s ease-out;
        }

        @keyframes slideUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .auth-card { margin: 1rem; }
            .card-body { padding: 2rem 1.5rem !important; }
        }
    </style>
{% endblock %}
