{% extends 'base.html.twig' %}

{% block title %}{{ contributor.name }} | SeriesTime{% endblock %}

{% block body %}
    <div class="contributor-page">
        <div class="header">
            {% if contributor.picture %}
                <img src="{{ asset(contributor.picture) }}" alt="{{ contributor.name }}" class="profile-pic">
            {% endif %}
            <div class="info">
                <h1>{{ contributor.name }}</h1>
                {% if contributor.role %}
                    <p class="role">{{ contributor.role }}</p>
                {% endif %}
            </div>
        </div>

        {% if contributor.biography %}
            <section class="biography">
                <h2>Biographie</h2>
                <p>{{ contributor.biography }}</p>
            </section>
        {% endif %}

        <section class="series">
            <h2>Apparaît dans</h2>
            <div class="series-grid">
                {% for serie in series %}
                    <a href="{{ path('serie_show', { id: serie.id }) }}" class="serie-card">
                        {% if serie.poster %}
                            <img src="{{ asset('uploads/posters/series/' ~ serie.poster) }}" alt="{{ serie.name }}">
                        {% endif %}
                        <span>{{ serie.name }}</span>
                    </a>
                {% else %}
                    <p>Aucune série enregistrée.</p>
                {% endfor %}
            </div>
        </section>
    </div>
{% endblock %}
