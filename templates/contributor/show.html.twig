{% extends 'base.html.twig' %}

{% block title %}Contributor{% endblock %}

{% block body %}
    <h1>Contributor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contributor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contributor.name }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ contributor.role }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ contributor.birthDate ? contributor.birthDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ contributor.country }}</td>
            </tr>
            <tr>
                <th>Biography</th>
                <td>{{ contributor.biography }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ contributor.photo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contributor_index') }}">back to list</a>

    <a href="{{ path('app_contributor_edit', {'id': contributor.id}) }}">edit</a>

    {{ include('contributor/_delete_form.html.twig') }}
{% endblock %}
