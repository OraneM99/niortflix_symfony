{% extends 'base.html.twig' %}

{% block title %}Paramètres Admin{% endblock %}
{% block body_class %}admin-dashboard{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/dashboard.css') }}?v={{ 'now'|date('U') }}">
{% endblock %}

{% block body %}
    {% include 'admin/_admin-nav.html.twig' %}

    <div class="admin-wrapper">
        <main class="admin-main">
            <div class="admin-container">
                <h1 class="mb-4">Paramètres du site</h1>

                {% if settings is not empty %}
                    <div class="card-section">
                        <table class="table table-dark table-striped align-middle">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Valeur</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for setting in settings %}
                                <tr>
                                    <td>{{ setting.name }}</td>
                                    <td>
                                        {% if setting.value is same as(true) %}
                                            <span class="badge bg-success">Activé</span>
                                        {% elseif setting.value is same as(false) %}
                                            <span class="badge bg-danger">Désactivé</span>
                                        {% else %}
                                            {{ setting.value }}
                                        {% endif %}
                                    </td>
                                    <td>{{ setting.description }}</td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-outline-warning">Modifier</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-info">
                        Aucun paramètre défini.
                    </div>
                {% endif %}
            </div>
        </main>
    </div>
{% endblock %}
