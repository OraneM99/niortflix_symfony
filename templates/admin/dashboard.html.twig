{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block body %}
    <div class="container-fluid min-vh-100">
        <div class="row m-0">
            {% include 'profile/_sidebar.html.twig' %}

            <!-- Contenu principal -->
            <main class="col-md-9 col-lg-10 ms-sm-auto px-md-4 py-4">
                <h1 class="mb-4">Bienvenue sur le Dashboard Admin</h1>

                <div class="row">
                    <!-- Statistiques ou cartes -->
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card bg-dark text-white p-3">
                            <h5>Nombre d’utilisateurs</h5>
                            <p class="display-6">{{ usersCount|default(0) }}</p>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card bg-dark text-white p-3">
                            <h5>Séries totales</h5>
                            <p class="display-6">{{ seriesCount|default(0) }}</p>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card bg-dark text-white p-3">
                            <h5>Nombre de films</h5>
                            <p class="display-6">{{ filmsCount|default(0) }}</p>
                        </div>
                    </div>
                </div>

                <div class="mt-5">
                    <h2>Dernières inscriptions</h2>
                    <div class="table-responsive">
                        <table class="table table-dark table-striped align-middle">
                            <thead>
                            <tr>
                                <th>Nom d’utilisateur</th>
                                <th>Email</th>
                                <th>Date d’inscription</th>
                                <th>Statut</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in lastUsers %}
                                <tr>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : '-' }}</td>
                                    <td>
                                        {% if user.isActive %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-danger">Désactivé</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted">
                                        Aucun utilisateur trouvé
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <style>
        .sidebar {
            height: 100vh;
            position: sticky;
            top: 0;
            background-color: #1c1c1c;
            border-right: 1px solid #333;
        }

        .nav-link.active {
            color: #7F8CAA !important;
            font-weight: 500;
        }

        .nav-link:hover {
            color: #739EC9 !important;
        }

        main {
            background-color: #121212;
            color: #fff;
            min-height: 100vh;
        }

        .card {
            border-radius: 0.5rem;
            border: 1px solid #333;
        }
    </style>
{% endblock %}
