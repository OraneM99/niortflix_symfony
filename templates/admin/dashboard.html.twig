{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}
{% block body_class %}admin-dashboard{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/dashboard.css') }}?v={{ 'now'|date('U') }}">
{% endblock %}

{% block body %}
    <div class="admin-wrapper">
        <!-- Aside navigation -->
        <aside class="admin-aside">
            <h2 class="aside-title">Admin</h2>
            <ul class="aside-nav">
                <li><a href="{{ path('admin_dashboard') }}" class="active">🏠 Dashboard</a></li>
                <li><a href="{{ path('admin_users') }}">👤 Gestion utilisateurs</a></li>
                <li><a href="{{ path('contributor_show', {id: 1}) }}">🎬 Contributeurs</a></li>
                <li><a href="{{ path('serie_liste') }}">📺 Séries</a></li>
                <li><a href="#">⚙️ Paramètres</a></li>
            </ul>
        </aside>

        <!-- Contenu principal -->
        <main class="admin-main">
            <div class="admin-container">
                <h1 class="mb-4">Dashboard Admin</h1>

                <!-- Statistiques -->
                <div class="row g-4 mb-4">
                    <div class="col-md-4">
                        <div class="stat-card">
                            <h5>Utilisateurs</h5>
                            <p class="stat-value">{{ usersCount|default(0) }}</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card">
                            <h5>Séries</h5>
                            <p class="stat-value">{{ seriesCount|default(0) }}</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card">
                            <h5>Films</h5>
                            <p class="stat-value">{{ filmsCount|default(0) }}</p>
                        </div>
                    </div>
                </div>

                <!-- Contributeurs -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2>Contributeurs</h2>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addContributorModal">
                        ➕ Créer un contributeur
                    </button>
                </div>

                <!-- Derniers utilisateurs -->
                <div class="card-section mt-5">
                    <h2>Derniers utilisateurs</h2>
                    <div class="table-responsive">
                        <table class="table table-dark table-striped align-middle">
                            <thead>
                            <tr>
                                <th>Nom d’utilisateur</th>
                                <th>Email</th>
                                <th>Date</th>
                                <th>Statut</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in lastUsers %}
                                <tr>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : '-' }}</td>
                                    <td>
                                        {% if user.isActive %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-danger">Désactivé</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Aucun utilisateur trouvé</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Modal ajout contributeur -->
    <div class="modal fade" id="addContributorModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content admin-modal">
                {% include 'admin/_contributor-form.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
