{% extends 'base.html.twig' %}

{% block title %}Notifications Admin{% endblock %}
{% block body_class %}admin-dashboard{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/dashboard.css') }}?v={{ 'now'|date('U') }}">
{% endblock %}

{% block body %}
    {% include 'admin/_admin-nav.html.twig' %}

    <div class="admin-wrapper">
        <main class="admin-main">
            <div class="admin-container">
                <h1 class="mb-4">Gestion des notifications</h1>

                {% if notifications is not empty %}
                    <div class="card-section">
                        <table class="table table-dark table-striped align-middle">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Titre</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for notif in notifications %}
                                <tr>
                                    <td>{{ notif.id }}</td>
                                    <td>{{ notif.title }}</td>
                                    <td>{{ notif.date|date('d/m/Y H:i') }}</td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-outline-info">Voir</a>
                                        <a href="#" class="btn btn-sm btn-outline-danger">Supprimer</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-info">
                        Aucune notification pour le moment.
                    </div>
                {% endif %}
            </div>
        </main>
    </div>
{% endblock %}
