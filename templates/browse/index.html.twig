{% extends 'base.html.twig' %}

{% block title %}Découvrir des séries{% endblock %}

{% block body %}
    <div class="container-fluid px-4 py-4">

        {# En-tête #}
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2">
                <i class="bi bi-compass"></i> Découvrir des séries
            </h1>
            <a href="{{ path('browse_search') }}" class="btn btn-outline-primary">
                <i class="bi bi-search"></i> Rechercher
            </a>
        </div>

        {# Séries tendances (API TMDb) #}
        {% if tmdb_trending is not empty %}
            <section class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="h4">
                        <i class="bi bi-fire text-danger"></i> Tendances cette semaine
                    </h2>
                    <a href="{{ path('browse_trending') }}" class="btn btn-sm btn-link">
                        Voir tout <i class="bi bi-arrow-right"></i>
                    </a>
                </div>

                <div class="row g-3">
                    {% for serie in tmdb_trending|slice(0, 6) %}
                        {{ include('browse/_serie_card.html.twig', {serie: serie}) }}
                    {% endfor %}
                </div>
            </section>
        {% endif %}

        {# Meilleures séries (API TMDb) #}
        {% if tmdb_top_rated is not empty %}
            <section class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="h4">
                        <i class="bi bi-star-fill text-warning"></i> Meilleures séries
                    </h2>
                    <a href="{{ path('browse_top_rated') }}" class="btn btn-sm btn-link">
                        Voir tout <i class="bi bi-arrow-right"></i>
                    </a>
                </div>

                <div class="row g-3">
                    {% for serie in tmdb_top_rated|slice(0, 6) %}
                        {{ include('browse/_serie_card.html.twig', {serie: serie}) }}
                    {% endfor %}
                </div>
            </section>
        {% endif %}

        {# Séries populaires locales #}
        {% if local_popular is not empty %}
            <section class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="h4">
                        <i class="bi bi-bookmark-fill text-primary"></i> Ma collection populaire
                    </h2>
                    <a href="{{ path('serie_liste') }}" class="btn btn-sm btn-link">
                        Voir tout <i class="bi bi-arrow-right"></i>
                    </a>
                </div>

                <div class="row g-3">
                    {% for serie in local_popular %}
                        <div class="col-6 col-md-4 col-lg-2">
                            <div class="card h-100 shadow-sm hover-scale">
                                <a href="{{ path('serie_detail', {id: serie.id}) }}" class="text-decoration-none">
                                    {% if serie.poster %}
                                        <img src="{{ serie.poster }}" class="card-img-top" alt="{{ serie.name }}">
                                    {% else %}
                                        <div class="bg-secondary" style="height: 300px; display: flex; align-items: center; justify-content: center;">
                                            <i class="bi bi-image fs-1 text-white-50"></i>
                                        </div>
                                    {% endif %}
                                    <div class="card-body p-2">
                                        <h6 class="card-title text-truncate mb-1">{{ serie.name }}</h6>
                                        <small class="text-muted">
                                            {% if serie.vote %}
                                                <i class="bi bi-star-fill text-warning"></i> {{ serie.vote|number_format(1) }}
                                            {% endif %}
                                        </small>
                                        <span class="badge bg-success">En collection</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </section>
        {% endif %}

        {# Séries récentes locales #}
        {% if local_recent is not empty %}
            <section class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="h4">
                        <i class="bi bi-clock-history"></i> Récemment ajoutées
                    </h2>
                </div>

                <div class="row g-3">
                    {% for serie in local_recent %}
                        <div class="col-6 col-md-4 col-lg-2">
                            <div class="card h-100 shadow-sm hover-scale">
                                <a href="{{ path('serie_detail', {id: serie.id}) }}" class="text-decoration-none">
                                    {% if serie.poster %}
                                        <img src="{{ serie.poster }}" class="card-img-top" alt="{{ serie.name }}">
                                    {% else %}
                                        <div class="bg-secondary" style="height: 300px; display: flex; align-items: center; justify-content: center;">
                                            <i class="bi bi-image fs-1 text-white-50"></i>
                                        </div>
                                    {% endif %}
                                    <div class="card-body p-2">
                                        <h6 class="card-title text-truncate mb-1">{{ serie.name }}</h6>
                                        <small class="text-muted">
                                            Ajoutée le {{ serie.dateCreated|date('d/m/Y') }}
                                        </small>
                                    </div>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </section>
        {% endif %}

    </div>

    <style>
        .hover-scale {
            transition: transform 0.2s;
        }
        .hover-scale:hover {
            transform: scale(1.05);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.3) !important;
        }
    </style>
{% endblock %}