{% extends 'base.html.twig' %}

{% block title %}Liste des séries{% endblock %}

{% block body %}
    <div class="container my-5 position-relative p-3">
        <div class="panel">
            <div class="text-center mb-3">
                <h2 class="page-title">Liste des séries</h2>
                <p class="page-subtitle">Parcourez, filtrez et retrouvez vos shows préférés.</p>
            </div>

            <ul class="nav nav-pills justify-content-center gap-2 mb-4" role="tablist" aria-label="Filtres de tri">
                <li class="nav-item">
                    {{ knp_pagination_sortable(series, 'Les mieux notées', ['s.vote'], {'class': 'nav-link pill-link'}) }}
                </li>
                <li class="nav-item">
                    {{ knp_pagination_sortable(series, 'Favoris des fans', ['s.popularity'], {'class': 'nav-link pill-link'}) }}
                </li>
                <li class="nav-item">
                    {{ knp_pagination_sortable(series, 'Les plus anciennes', ['s.firstAirDate'], {'class': 'nav-link pill-link'}) }}
                </li>
                <li class="nav-item">
                    {{ knp_pagination_sortable(series, 'A à Z', ['s.name'], {'class': 'nav-link pill-link'}) }}
                </li>
            </ul>

            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-4">
                {% for serie in series %}
                    <div class="col d-flex">
                        <div class="card-show w-100">
                            <a href="{{ path('serie_detail', {id: serie.id}) }}" class="card-tapzone" aria-label="Voir la fiche de {{ serie.name }}">
                                <div class="card-media">
                                    <img
                                            src="{{ asset(serie_params.poster_dir ~ '/' ~ serie.poster) }}"
                                            alt="Poster de {{ serie.name }}"
                                            loading="lazy">
                                    <div class="chip chip-score">
                                        <img src="{{ asset('icons/star.png') }}" alt="Vote" class="icon-btn">
                                        {{ serie.vote|default('N/A') }}
                                    </div>
                                    <div class="chip chip-flag">{{ serie.country|flag }}</div>
                                    <div class="media-fade"></div>
                                </div>
                                <div class="card-caption">
                                    <h6 class="text-truncate-2">{{ serie.name }}</h6>
                                    <small class="dates">
                                        {{ serie.firstAirDate ? serie.firstAirDate|date('Y') : 'Date inconnue' }}
                                        {% if serie.lastAirDate %}– {{ serie.lastAirDate|date('Y') }}{% endif %}
                                    </small>
                                </div>
                            </a>

                            {# Overlay au survol #}
                            <div class="card-overlay">
                                {# En savoir plus -> fiche détail #}
                                <a href="{{ path('serie_detail', {id: serie.id}) }}"
                                   class="btn-watch js-open-detail"
                                   aria-label="En savoir plus sur {{ serie.name }}">
                                    <img src="{{ asset('icons/info.png') }}" alt="">
                                    En savoir plus
                                </a>

                                <div class="overlay-actions">
                                    {# Ajouter/retirer des favoris #}
                                    <a href="{{ path('serie_favorite', {id: serie.id}) }}"
                                       class="icon-circle js-favorite"
                                       data-url="{{ path('serie_favorite', {id: serie.id}) }}"
                                       data-token="{{ csrf_token('favorite' ~ serie.id) }}"
                                       title="Ajouter aux favoris" aria-label="Ajouter aux favoris">
                                        <img src="{{ asset('icons/heart.png') }}" alt="">
                                    </a>

                                    {# Ne plus me proposer (masquer) #}
                                    <a href="{{ path('serie_ignore', {id: serie.id}) }}"
                                       class="icon-circle" title="Ne plus me proposer" aria-label="Ne plus me proposer">
                                        <img src="{{ asset('icons/stop.png') }}" alt="">
                                    </a>
                                </div>

                                <p class="overlay-synopsis">
                                    {{ serie.overview|default('Synopsis indisponible.') }}
                                </p>
                            </div>

                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="pagination-container d-flex justify-content-center mt-4">
                {{ knp_pagination_render(series) }}
            </div>
        </div>
    </div>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('serie_create') }}" class="fab-add-serie" title="Ajouter une série"
           style="position: fixed; bottom: 28px; right: 24px; width:60px; height:60px; border-radius: var(--radius-m);
              background: var(--pri); color:#fff; display:grid; place-items:center;
              box-shadow: 0 10px 24px rgba(127,140,170,.45); border:1px solid rgba(255,255,255,.12);">
            <i class="fa-solid fa-plus"></i>
        </a>
    {% endif %}
{% endblock %}
