{% extends 'base.html.twig' %}

{% block title %}Liste des séries{% endblock %}

{% block body %}
    <div class="container my-5">

        <!-- Titre -->
        <h2 class="text-center mb-4">Liste des séries</h2>

        <!-- Pagination -->
        <div class="d-flex justify-content-between mb-4">
            {% if page > 1 %}
                <a class="btn btn-outline-primary" href="{{ path('serie_liste', {'page': page - 1}) }}">← Page précédente</a>
            {% else %}
                <div></div>
            {% endif %}

            {% if page < nb_pages %}
                <a class="btn btn-outline-primary ms-auto" href="{{ path('serie_liste', {'page': page + 1}) }}">Page suivante →</a>
            {% endif %}
        </div>

        <!-- Liste des séries -->
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            {% for serie in series %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <a href="{{ path('serie_detail', {id : serie.id}) }}" class="text-decoration-none text-dark">
                            <img src="{{ asset('uploads/posters/series/') ~ serie.poster }}" class="card-img-top" alt="Poster de {{ serie.name }}" loading="lazy" style="height: 370px; object-fit: cover;">
                            <div class="card-body text-center">
                                <h5 class="card-title">{{ serie.name }}</h5>
                            </div>
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-warning text-center">Pas de série trouvée.</div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
