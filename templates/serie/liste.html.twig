{% extends 'base.html.twig' %}

{% set search = search|default('') %}
{% set sort = sort|default('') %}

{% block title %}Liste des s√©ries{% endblock %}

{% block body %}
    <div class="container my-5 position-relative p-3">

        <div class="overlay" style="padding: 2rem; border-radius: 15px;">
            <!-- Titre -->
            <h2 class="text-center mb-4 text-light">üì∫ Liste des s√©ries</h2>

            <!-- Barre de recherche -->
            <form method="get" class="mb-4 d-flex justify-content-center">
                <input type="text" name="search" value="{{ search }}" placeholder="Rechercher une s√©rie..."
                       class="form-control form-control-dark me-2" style="max-width: 400px;">
                <button type="submit" class="btn btn-primary">üîç</button>
            </form>

            <!-- Filtres en onglets -->
            <ul class="nav nav-tabs mb-4 justify-content-center" id="seriesTabs">
                <li class="nav-item">
                    <a class="nav-link {{ sort == 'best' ? 'active' }}" href="?sort=best">Les mieux not√©es</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ sort == 'fans' ? 'active' }}" href="?sort=fans">Favoris des fans</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ sort == 'date' ? 'active' }}" href="?sort=date">Les plus anciennes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ sort == 'last' ? 'active' }}" href="?sort=last">Les plus r√©centes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ sort == 'name' ? 'active' }}" href="?sort=name">A √† Z</a>
                </li>
            </ul>

            <!-- Liste des s√©ries -->
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
                {% for serie in series %}

                    <div class="col">
                        <div class="card bg-dark text-light border-0 shadow-sm position-relative" style="height: 420px;">
                            <!-- Note en blanc -->
                            <div class="position-absolute top-0 start-0 m-2 px-2 py-1 text-white fw-bold note-badge">
                                ‚≠ê {{ serie.vote|default('N/A') }}
                            </div>

                            <!-- Drapeau du pays -->
                            <div class="position-absolute top-0 end-0 m-2 px-2 py-1 text-white fw-bold note-badge">
                                {{ serie.country|flag }}
                            </div>

                            <a href="{{ path('serie_detail', {id: serie.id}) }}" class="text-decoration-none text-light">
                                <img src="{{ asset(serie_params.poster_dir ~ '/' ~ serie.poster) }}"
                                     class="card-img-top" alt="Poster de {{ serie.name }}"
                                     style="height: 350px; object-fit: cover; border-radius: 0;">
                                <div class="card-body text-center p-2">
                                    <h6 class="card-title mb-1 title-compact">
                                        {{ serie.name }}
                                        <br>
                                        <small class="dates p-2">
                                            {{ serie.firstAirDate ? serie.firstAirDate|date('Y') : 'Date inconnue' }}
                                            {% if serie.lastAirDate %}
                                            - {{ serie.lastAirDate|date('Y') }}
                                            {% endif %}
                                        </small>
                                    </h6>
                                </div>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Pagination -->
            <div class="d-flex justify-content-between align-items-center mt-4">
                {% if page > 1 %}
                    <a class="btn btn-outline-light" href="{{ path('serie_liste', {'page': page - 1}) ~ '?sort=' ~ sort }}">‚Üê Page pr√©c√©dente</a>
                {% else %}
                    <div></div>
                {% endif %}

                {% if page < nb_pages %}
                    <a class="btn btn-outline-light ms-auto" href="{{ path('serie_liste', {'page': page + 1}) ~ '?sort=' ~ sort }}">Page suivante ‚Üí</a>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Styles personnalis√©s -->
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            background: url('{{ asset('images/fond.jpeg') }}') center/cover no-repeat fixed;
            position: relative;
            font-family: Arial, sans-serif;
        }

        .overlay {
            background-color: rgba(0, 0, 0, 0.6);
            min-height: 100vh;
            padding: 2rem 0;
        }

        .title-compact {
            font-size: 1rem;
            line-height: 1.2;
            font-weight: bold;
        }

        .title-compact .dates {
            display: block;
            margin-top: 0.25rem;
            font-size: 0.75rem;
            color: #fff;
        }

        .note-badge {
            background-color: rgba(0, 0, 0, 0.6);
            color: #fff;
            border-radius: 12px;
            font-size: 0.9rem;
        }

        .nav-tabs .nav-link {
            color: #fff;
        }

        .nav-tabs .nav-link.active {
            border-color: #0d6efd;
            color: #0d6efd;
        }

        .card:hover {
            transform: translateY(-5px);
            transition: transform 0.3s ease;
        }
    </style>
{% endblock %}
