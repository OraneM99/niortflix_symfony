{% extends 'base.html.twig' %}

{% block title %}{{ serie.name }}{% endblock %}

{% block body %}
    <div class="container-fluid p-0">

        {# Backdrop en fond #}
        {% if serie.backdrop %}
            <div class="position-relative" style="height: 400px;">
                <img src="{{ serie.backdrop }}"
                     alt="{{ serie.name }}"
                     style="width: 100%; height: 100%; object-fit: cover;">
                <div class="position-absolute top-0 start-0 w-100 h-100"
                     style="background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.9));"></div>

                {# Titre sur le backdrop #}
                <div class="position-absolute bottom-0 start-0 p-4 text-white">
                    <h1 class="display-4 fw-bold">{{ serie.name }}</h1>
                    {% if serie.first_air_date %}
                        <p class="lead">{{ serie.first_air_date|date('Y') }}</p>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        <div class="container py-4">

            {# Alerte si déjà en collection #}
            {% if is_in_database %}
                <div class="alert alert-success">
                    <i class="bi bi-check-circle"></i>
                    Cette série est déjà dans votre collection.
                    <a href="{{ path('serie_liste') }}" class="alert-link">Voir ma collection</a>
                </div>
            {% endif %}

            <div class="row">
                {# Poster #}
                <div class="col-md-3">
                    {% if serie.poster %}
                        <img src="{{ serie.poster }}"
                             class="img-fluid rounded shadow"
                             alt="{{ serie.name }}">
                    {% else %}
                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center"
                             style="height: 450px;">
                            <i class="bi bi-film fs-1 text-white-50"></i>
                        </div>
                    {% endif %}

                    {# Boutons d'action #}
                    <div class="d-grid gap-2 mt-3">
                        {% if is_granted('ROLE_ADMIN') and not is_in_database %}
                            <form method="post" action="{{ path('api_import', {tmdbId: serie.tmdb_id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('import' ~ serie.tmdb_id) }}">
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-plus-circle"></i> Ajouter à ma collection
                                </button>
                            </form>
                        {% endif %}

                        <a href="{{ path('serie_liste', {source: 'api'}) }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Retour au catalogue
                        </a>
                    </div>
                </div>

                {# Détails #}
                <div class="col-md-9">

                    {# Infos principales #}
                    <div class="mb-4">
                        <div class="d-flex gap-2 mb-3">
                            {% if serie.vote %}
                                <span class="badge bg-warning text-dark fs-6">
                                <i class="bi bi-star-fill"></i> {{ serie.vote|number_format(1) }}/10
                            </span>
                            {% endif %}

                            {% if serie.status %}
                                <span class="badge bg-primary fs-6">
                                {% if serie.status == 'Returning Series' %}
                                    En cours
                                {% elseif serie.status == 'Ended' %}
                                    Terminée
                                {% else %}
                                    {{ serie.status }}
                                {% endif %}
                            </span>
                            {% endif %}

                            {% if serie.number_of_seasons is defined %}
                                <span class="badge bg-secondary fs-6">
                                {{ serie.number_of_seasons }} saison(s)
                            </span>
                            {% endif %}

                            {% if serie.number_of_episodes is defined %}
                                <span class="badge bg-secondary fs-6">
                                {{ serie.number_of_episodes }} épisode(s)
                            </span>
                            {% endif %}
                        </div>

                        <h3>Synopsis</h3>
                        <p class="lead">{{ serie.overview ?: 'Aucun synopsis disponible.' }}</p>
                    </div>

                    {# Genres #}
                    {% if serie.genres is defined and serie.genres is not empty %}
                        <div class="mb-4">
                            <h4>Genres</h4>
                            <div class="d-flex gap-2 flex-wrap">
                                {% for genre in serie.genres %}
                                    <span class="badge bg-dark">{{ genre.name }}</span>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    {# Dates #}
                    <div class="mb-4">
                        <h4>Informations</h4>
                        <table class="table table-sm">
                            <tbody>
                            {% if serie.first_air_date %}
                                <tr>
                                    <th style="width: 200px;">Première diffusion</th>
                                    <td>{{ serie.first_air_date|date('d/m/Y') }}</td>
                                </tr>
                            {% endif %}
                            {% if serie.last_air_date %}
                                <tr>
                                    <th>Dernière diffusion</th>
                                    <td>{{ serie.last_air_date|date('d/m/Y') }}</td>
                                </tr>
                            {% endif %}
                            {% if serie.popularity is defined %}
                                <tr>
                                    <th>Popularité</th>
                                    <td>{{ serie.popularity|number_format(0) }}</td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>

                    {# Note importante #}
                    {% if not is_in_database %}
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Note :</strong> Cette série provient du catalogue TMDb.
                            Pour la suivre et gérer vos épisodes, vous devez l'ajouter à votre collection.
                        </div>
                    {% endif %}

                </div>
            </div>

        </div>
    </div>
{% endblock %}