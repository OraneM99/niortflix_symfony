<div class="modal-header border-0">
    <h5 class="modal-title text-white">{{ serie.name }}</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
</div>

<div class="modal-body">
    <div class="row g-3">
        <div class="col-12 col-md-4">
            <img
                    src="{{ asset(serie_params.poster_dir ~ '/' ~ serie.poster) }}"
                    alt="Poster de {{ serie.name }}"
                    class="w-100 rounded"
                    style="border:1px solid rgba(255,255,255,.12)">
        </div>
        <div class="col-12 col-md-8">
            <div class="d-flex align-items-center gap-2 mb-2">
        <span class="chip chip-score">
          <img src="{{ asset('icons/star.png') }}" alt="Vote" class="icon-btn">
          {{ serie.vote|default('N/A') }}
        </span>
                <span class="chip chip-flag">{{ serie.country|flag }}</span>
            </div>

            <p class="text-light opacity-90 mb-2">
                <small class="dates">
                    {{ serie.firstAirDate ? serie.firstAirDate|date('d/m/Y') : 'Date inconnue' }}
                    {% if serie.lastAirDate %} – {{ serie.lastAirDate|date('d/m/Y') }}{% endif %}
                </small>
            </p>

            <p class="text-white-50 mb-3" style="white-space:pre-line;">
                {{ serie.overview|default('Synopsis indisponible.') }}
            </p>

            {% if contributors is defined and contributors %}
                <div class="mb-2">
                    <strong class="text-white">Contributeurs :</strong>
                    <ul class="mb-0 text-white-50">
                        {% for c in contributors|slice(0,6) %}
                            <li>{{ c.name }}{% if c.role %} — <em>{{ c.role }}</em>{% endif %}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<div class="modal-footer border-0">
    <a href="{{ path('serie_detail', {id: serie.id}) }}" class="btn btn-sm btn-gradient">
        Voir la fiche complète
    </a>
    <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Fermer</button>
</div>
